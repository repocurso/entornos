Vagrant.configure('2') do |config|
  vm_box = "generic/rhel7"
  config.vm.boot_timeout = 600
  config.vm.define :centos, primary: true  do |centos|
    centos.vm.box = vm_box
    centos.vm.box_check_update = true
    centos.vm.network :private_network, ip: "192.168.100.11"
    centos.vm.hostname = "centos"
    centos.vm.synced_folder ".", "/vagrant"
    centos.vm.provider "virtualbox" do |vb|
      vb.name = "docker-centos"
      vb.memory = "1024"
      vb.cpus = "2"
    end
  end
end
